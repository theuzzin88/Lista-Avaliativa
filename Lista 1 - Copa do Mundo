#include <stdio.h>

int main() {
    int ano;

    printf("Digite um ano:");
        scanf("%d", &ano);

    if (ano < 1800 || ano > 2022) {
        printf("Ano fora do intervalo valido.\n");
    return 1;
    }

    if (ano == 1930 || ano == 1934 || ano == 1938 || ano == 1950 ||
        ano == 1954 || ano == 1958 || ano == 1962 || ano == 1966 ||
        ano == 1970 || ano == 1974 || ano == 1978 || ano == 1982 ||
        ano == 1986 || ano == 1990 || ano == 1994 || ano == 1998 ||
        ano == 2002 || ano == 2006 || ano == 2010 || ano == 2014 ||
        ano == 2018 || ano == 2022) {
        printf("A Copa do Mundo de Futebol ocorreu no ano de %d.\n", ano);
    } else {
        printf("Nao houve Copa do Mundo no ano de %d.\n", ano);
    }

    return 0;
}
